Config { overrideRedirect = False
       , font     = "xft:iosevka-9"
       , bgColor  = "#2e3440"
       , fgColor  = "#d8dee9"
       , commands = [ Run Weather "EGPF"
                        [ "--template", "<weather> <tempC>C"
                        , "-L", "0"
                        , "-H", "25"
                        , "--low"   , "lightblue"
                        , "--normal", "#f8f8f2"
                        , "--high"  , "red"
                        ] 36000
                    , Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Memory ["--template", "Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run DiskU [("/", "Disk <usedp>%")] [] 20
                    , Run Date "%a %d-%m-%Y <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run BatteryP ["BAT0"] [ "-t", "<acstatus> <leftbar>", "--", "-l", "red", "-p", "green", "-a", "notify-send -u critical 'Battery running out" ] 600
                    , Run Brightness ["-t", "<bar>"] 60
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %cpu% * %memory% * %swap% * %disku%  | %EGPF% | %date% | %bright% | %battery%"
       }
